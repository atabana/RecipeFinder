<h1>Searching for - <%=  @search_term %></h1>
<table border="1">
	<tr>
		<th>Image URL</th>
		<th>Title</th>
		<th>Ranking</th>
	</tr>
	<% @recipes.each do |recipe| %>
		<tr class=<%= cycle('even', 'odd') %>>
			<td><%= link_to image_tag(recipe["image_url"], size: "400x400"), recipe["source_url"]%></td>
			<td><%= link_to recipe["title"], recipe["source_url"]%></td>
			<td><%= recipe["social_rank"] %></td>
		</tr>
	<% end %>


</table>
<p><%= link_to "Google", "http://www.google.com" %></p>
<p><%= link_to "Index", recipes_index_path %></p>

